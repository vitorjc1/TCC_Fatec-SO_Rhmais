<div class="container mt-4">
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}


    <div class="card mt-5">
        <div class="card-header text-white" style="background-color:#836FFF;">
            <h3 class="text-center">Dados do colaborador</h3>
        </div>

        <div class="card-body" >
            <form action="/colaborador/atualizacao" method="post" >
                <div class="form-group">
                    <label for="formGroupExampleInput">Nome</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" name="nome"
                       maxlength="10" maxlength="50" value="{{colaborador.dataValues.nome}}">
                </div>
                <input type="hidden" name="id" value="{{colaborador.dataValues.id}}">
                <input type="hidden" name="setorId" value="{{colaborador.dataValues.setorId}}">
                <div class="row">
                    <div class="col">
                        <label for="exampleInputEmail1">E-mail</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="email" maxlength="10" maxlength="50" value="{{colaborador.dataValues.email}}">
                    </div>
                    <div class="col">
                        <label for="exampleInputPassword1">Senha</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Senha..."
                          minlength="6" maxlength="20" name="senha">
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col">
                        <label for="cargo">Cargo</label>
                        <select class="form-control" name="cargoId">
                            {{#each cargos}}
                            <option value="{{dataValues.id}}" {{selecionar dataValues.id ../colaborador.dataValues.cargoId}}>
                                {{dataValues.nome}}
                            </option>
                            {{else}}    
                            {{/each}}

                           
                        </select>
                    </div>
                    <div class="col">
                        <label>NÃ­vel de acesso </label>
                        <select class="form-control" name="acesso">
                            {{#ifCond colaborador.dataValues.acesso '==' 0}}
                            <option value="0" selected> Colaborador </option>
                            <option value="1" > Gestor </option>
                            <option value="2" > Instrutor </option>
                            {{/ifCond}}
                            {{#ifCond colaborador.dataValues.acesso '==' 1}}
                            <option value="0" > Colaborador </option>
                            <option value="1" selected> Gestor </option>
                            <option value="2" > Instrutor </option>
                            {{/ifCond}}
                            {{#ifCond colaborador.dataValues.acesso '==' 2}}
                            <option value="0" > Colaborador </option>
                            <option value="1" > Gestor </option>
                            <option value="2" selected> Instrutor </option>
                            {{/ifCond}}

                        </select>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col">
                        <label for="setor">Setor</label>
                        <select class="form-control" name="cargoId">
                            {{#each setores}}
                            <option value="{{dataValues.id}}" {{selecionar dataValues.id ../colaborador.dataValues.setorId}}>
                                {{dataValues.nome}}
                            </option>
                            {{else}}
                            {{/each}}
                        </select>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary mt-4">Atualizar</button>
            </form>
        </div>

    </div>
    <br/>
    <div>
        <a href="/visualizarColaborador" class="btn btn-primary" style="padding-left: 50px; padding-right: 50px;">Voltar</a>
    </div>
    </div>
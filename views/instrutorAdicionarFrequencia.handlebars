<div class="container mt-5 mb-5">
    {{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
    <br />
    {{else}}
    {{/each}}

    <div class="card mt-4">
        <div class="card-header colorViolet text-white" style="background-color: #836FFF;">
            <h3 class="text-center">Frequência dos Colaboradores {{agenda.dataValues.curso.dataValues.nome}} </h3>

        </div>
        <div class="card-body">
            <div class="">
                <form action="/avaliacao/adicionarFrequencia" method="POST">
                    <input type="hidden" value="{{agenda.dataValues.id}}" name="agendaId" id="agendaId">
                    <input type="hidden" value="{{agenda.dataValues.curso.dataValues.nome}}" name="curso">
                    <input type="hidden" value="{{agenda.dataValues.curso.dataValues.cargaHoraria}}"
                        name="cargaHoraria">
                    <div class="card-body">

                        <div class="row text-center">
                            <div class="col-md-12">
                                <div class="container">
                                    <div class="row ">
                                        <div class="col-md-4">
                                            <h5><b>Total de aulas:</b>
                                                {{agenda.dataValues.curso.dataValues.cargaHoraria}}</h5>
                                        </div>
                                        <div class="col-md-4">
                                            <h5><b>Aulas ministradas:</b> {{qtdfrequencia}}</h5>
                                        </div>
                                        <div class="col-md-4">
                                            <h5><b>Faltam:</b> {{horasRestantes}}</h5>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row mt-5 text-center">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="col-md-3 mt-1">
                                    <h5><b>Aulas:</b></h5>
                                </div>
                                <div class="col-md-6">
                                    <select class="form-control" name="horaAula" id="horaAula">
                                        <option value="1" selected>1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                        <option value="9">9</option>
                                        <option value="10">10</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mt-1">
                            <h5><b>Data Frequência:</b></h5>
                        </div>


                        <div class="input-group date col-md-3" data-provide="datepicker" id="calendario">
                            <input type="text" name="dataFrequencia" class="form-control" required="required">

                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                    </div>
            </div>
        </div>


        <div class="container">
            <h4 style="color: #836FFF;" class="text-center"><b>Listagem de Alunos</b></h4>
            <div class="card-body " style="overflow: auto; width: 100%; height: 300px; ">

                {{#each agenda.dataValues.agendaCursoColaboradors}}
                <hr style="color:#836FFF; background-color: #836FFF;">
                <div class="mt-1">
                    <h5><b>{{dataValues.colaborador.dataValues.nome}} </b></h5>
                    <input type="hidden" value="{{dataValues.id}}" name="agendaCursoColaboradorId">
                    <div class="row mt-3">
                        <div class="col-md-3">
                            <h6 class=" ">Presença:</h6>
                            <input type="number" class="form-control" name="presenca" min="0" max="10"
                                required="required">
                        </div>
                        <div class="col-md-6">
                            <h6 class=" ">Observação:</h6>
                            <input type="text" class="form-control" name="observacao">
                        </div>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary text-center mt-5"
                style="padding-left: 60px; padding-right:60px;">Confirmar</button>
        </div>
        <div class="col-md-4">
            <a href="/avaliacao/frequenciasRegistradas/{{agenda.dataValues.id}}" class="btn text-white mt-5"
                style="background-color: #836FFF;">Frequências Registradas</a>
        </div>
        <div class="col-md-4">
            <a href="/avaliarCurso" class="btn btn-outline-primary mt-5"
                >Voltar</a>
        </div>
    </div>
    </form>

    
</div>
   
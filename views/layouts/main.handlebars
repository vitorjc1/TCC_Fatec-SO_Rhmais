    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="/css/bootstrap-datepicker.css">
    <title>Sistema Integrado de R.H</title>
</head>

<body>
    {{#if error}}
    <div class="container mt-5" >
        <div class="alert alert-danger text-center mt-4"><h5>{{error}}</h5></div>
    </div>
        
    {{else}}
    {{/if}}
    {{#if user}}
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark" style="background-color: #836FFF;">
        <div class="container">

            <a class="navbar-brand h1 mb-0" href='/colaborador/info/{{user.dataValues.id}}'>{{user.dataValues.nome}}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSite">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSite">
                <ul class="navbar-nav ml-auto">
                    {{#if gestor}}
                    <li class="nav-item">
                        <a class="nav-link text-white btn" href="/homeGestor">Home</a>
                    </li>
                    {{else}}
                    {{#if colaborador}}
                    <li class="nav-item">
                        <a class="nav-link text-white btn" href="/homeColaborador">Home</a>
                    </li>
                    {{else}}
                    {{#if instrutor}}
                    <li class="nav-item">
                        <a class="nav-link text-white btn" href="/homeInstrutor">Home</a>
                    </li>
                    {{/if}}
                    {{/if}}
                    {{/if}}




                </ul>
                <ul class="navbar-nav ml-3">
                    <li class="nav-item">
                        <a class="nav-link text-white btn" data-toggle="modal" data-target="#modalSair">Sair</a>
                    </li>
                </ul>

            </div>

        </div>
        </div>
    </nav>

    <div class="modal fade" id="modalSair" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header colorViolet" style="background-color: #836FFF;">
                    <h5 class="modal-title text-white" id="exampleModalLabel">Encerrar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    VocÃª tem certeza que deseja sair do sistema?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <a type="button" class="btn colorViolet text-white" href="/logout"
                        style="background-color: #836FFF;">Sair</a>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-5"></div>
    <br />




    {{#if error_msg}}
    <div class="container  text-center mt-5">
        <div class="alert alert-danger">{{error_msg}}</div>
    </div>
    {{else}}
    {{/if}}


    {{#if success_msg}}
    <div class="container  text-center mt-5">
        <div class="alert alert-success text-center mt-5">{{success_msg}}</div>
    </div>
    {{else}}
    {{/if}}

    {{#if error}}
    <div class="container  text-center mt-5">
        <div class="alert alert-danger text-center mt-5">{{error}}</div>
    </div>

    {{else}}
    {{/if}}
    {{/if}}

    {{{body}}}


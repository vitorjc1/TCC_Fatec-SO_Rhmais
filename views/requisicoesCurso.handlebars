<div class="container mt-4">

    {{#if sucesso}}
    <div class="alert alert-success">{{dataValues.sucesso}}!</div>
    {{else}}

    {{/if}}
    <h3 class="text-center">Requisições Curso <i class="fa fa-book" aria-hidden="true"></i> </h3>
    <br>
    <div class="container mt-4">
      <a href="/requisitarCurso" class="btn btn-success">Requisitar novo curso</a>
    </div>

    {{#each requisicoes}}
    <div class="card mt-4">

        <div class="card-header colorViolet text-white">
            {{curso}}
        </div>
        <div class="card-body" >
            <p><b>Data da requisição:</b> {{formatDate dataRequisicao}}</p>
            <p><b>Data da resposta:</b> {{formatDate dataAtualizacao}}</p>
            {{#ifCond situacao '==' 0}}
                <p class="text-danger"><b class="text-dark">Situação: </b>Cancelado.</p>
            {{/ifCond}}
            
            {{#ifCond situacao '==' 1}}
                <p class="text-primary"><b class="text-dark">Situação: </b>Aceito.</p>
            {{/ifCond}}

            
            {{#ifCond situacao '==' 2}}
                <p class="text-warning"><b class="text-dark">Situação: </b>Em análise.</p>
            {{/ifCond}}
            
        </div>
    </div>

    {{else}}
    <div class="card mt-4 text-center">
        <div class="card-header colorViolet text-white">
            <h5>Nenhuma Requisição encontrada.</h5>
        </div>
        <div class="card-Body">
            <div class="alert alert-primary mt-2">
            <p>Animado para fazer um curso?</p>
            <p>Não perca tempo e faça sua nova requisição, assim que aprovado o seu Gestor estará formando uma nova aganda para você!</p>
            </div>
        </div>
    </div>
    

    {{/each}}
    <br/>
    <div>
        <a href="/homeColaborador" class="btn btn-primary" style="padding-left: 50px; padding-right: 50px;">Voltar</a>
    </div>
    <br/>
    

</div>